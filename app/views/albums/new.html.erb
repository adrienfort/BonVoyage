<div class="m-5">
  <h1>This the creation of a new album</h1>
  <p>find me in app/views/albums/new.html.erb</p>

  <div class="m-3">
    <%= simple_form_for [@artist, @album] do |f| %>
      <%= f.input :name %>
      <%= f.input :meaning %>
      <%= f.input :photo, as: :file %>
      <% i = 1 %>
      <%= f.simple_fields_for :musics do |music| %>
        <h5>Music #<%= i %></h5>
        <%= music.input :name %>
        <%= music.input :audio_file, as: :file %>
        <% i += 1 %>
      <% end %>
      <%= f.submit %>
    <% end %>
  </div>
</div>
