<div class="m-5">
  <h1>This the editation of <%= @album.name %></h1>
  <p>find me in app/views/albums/edit.html.erb</p>

  <div class="m-3">
    <%= simple_form_for [@artist, @album] do |f| %>
      <%= f.input :name %>
      <%= f.input :meaning %>
      <%= f.input :photo, as: :file %>
      <%= f.submit %>
    <% end %>
  </div>

  <p><%= link_to "Destroy #{@album.name}", artist_album_path(@artist, @album),
                    method: :delete, data: { confirm: "Are you sure ?"} %></p>
</div>
