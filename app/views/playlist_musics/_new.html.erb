<div class="modal" id="new-playlist_music-modal" tabindex="-1" role="dialog" aria-labelledby="newPlaylistMusicModal" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="new-playlist-modal-body">
        <div class="new-playlist-modal-header">
          <div class="new-playlist-modal-header-box">
            <h3>Adding <span class="underline-green"><%= @music.name %></span> to a playlist</h3>
          </div>
          <div class="new-playlist-modal-header-box">
            <a href="#close-modal" rel="modal:close" type="button" class="close" data-dismiss="modal" aria-label="Close">
              <h6><span class="underline-red">Stop</span></h6>
            </a>
          </div>
        </div>
        <div class="new-playlist-container">
          <%= simple_form_for [ @explorer, @music, @playlist_music ], remote: true, id: "new-playlist_music-form" do |f| %>
            <%= f.select  :playlist,
                          options_for_select(@explorer.playlists.collect { | playlist | [playlist.name, playlist.id] }) %>
            <%= f.submit "Add", class: "green-submit-btn new-playlist-submit-btn" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
